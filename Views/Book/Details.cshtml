@model LibrarySystem.Models.Book

@{
    ViewData["Title"] = "Book Details";
}

<h2>Book Details</h2>

<table class="table">
    <tr>
        <th>Title:</th>
        <td>@Model.Title</td>
    </tr>
    <tr>
        <th>Author:</th>
        <td>@Model.Author?.Name</td>
    </tr>
    <tr>
        <th>ISBN:</th>
        <td>@Model.ISBN</td>
    </tr>
    <tr>
        <th>Available:</th>
        <td>@(Model.IsAvailable ? "Yes" : "No")</td>
    </tr>
</table>

<a asp-action="Edit" asp-route-id="@Model.BookId" class="btn btn-warning">Edit</a>
<a asp-action="Index" class="btn btn-secondary">Back</a>
