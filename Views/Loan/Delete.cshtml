<div>
    <h4>Loan</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Book</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Book.Title)</dd>

        <dt class="col-sm-2">Member</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Member.FirstName) @Html.DisplayFor(model => model.Member.LastName)</dd>

