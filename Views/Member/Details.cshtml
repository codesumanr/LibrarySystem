@model LibrarySystem.Models.Member

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Member</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">First Name</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.FirstName)</dd>

        <dt class="col-sm-2">Last Name</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.LastName)</dd>

        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Email)</dd>

        <dt class="col-sm-2">Phone</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.PhoneNumber)</dd>

        <dt class="col-sm-2">Address</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Address)</dd>

        <dt class="col-sm-2">Membership Date</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.MembershipDate)</dd>

        <dt class="col-sm-2">Loans</dt>
        <dd class="col-sm-10">
            @if (Model.Loans != null && Model.Loans.Any())
            {
                <ul>
                    @foreach (var loan in Model.Loans)
                    {
                        <li>@loan.Book.Title (Due: @loan.DueDate.ToShortDateString())</li>
                    }
                </ul>
            }
            else
            {
                <p>No loans found for this member.</p>
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.MemberId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>